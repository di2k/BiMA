<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="8dp"
        android:paddingLeft="8dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pendapatan Negara"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/slide_a_r20" />
        </RelativeLayout>


        <ImageView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/slide_a_r20_2" />

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:text="Kontribusi penerimaan perpajakan terus dioptimalkan sebagai sumber penerimaan dan instrumen fiskal ditengah ketidakpastian perekonomian global yang masih lemah" />

            <TableLayout
                android:paddingLeft="16dp"
                android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:text="Perpajakan"
                        android:paddingRight="32dp"

                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"/>
                    <TextView
                        android:text="1.861,8"
                        android:paddingRight="24dp"
                        android:textStyle="bold"
                        android:textColor="@color/orangeFlaminggo"
                        android:textSize="18sp"/>
                    <TextView
                        android:gravity="right"
                        android:text="1.643,1"
                        android:textColor="@color/yellow"
                        android:textSize="14sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="PNBP"
                        android:paddingRight="32dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"/>
                    <TextView
                        android:gravity="right"
                        android:text="359,3"
                        android:paddingRight="24dp"
                        android:textStyle="bold"
                        android:textColor="@color/orangeFlaminggo"
                        android:textSize="18sp"/>
                    <TextView
                        android:gravity="right"
                        android:text="386,3"
                        android:textColor="@color/yellow"
                        android:textSize="14sp"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>


    </LinearLayout>
    <TextView
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:padding="8dp"
        android:text="Penurunan Pembiayaan Utang sebagai upaya menjaga keseimbangan fiskal"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/slide_a_r20_2a"/>
</LinearLayout>


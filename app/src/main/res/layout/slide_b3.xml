<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="8dp"
        android:paddingLeft="8dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belanja Negara"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@drawable/slide_b_a19" />
        </RelativeLayout>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/slide_b_a19_3" />

        <LinearLayout
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="4dp"
                android:textColor="@color/colorAccent"
                android:text="Belanja Negara diarahkan mencapai tujuan pembangunan nasional antara lain infrastruktur, pengurangan kemiskinan dan pengangguran dalam rangka pemerataan pembangunan dan perbaikan konektivitas dengan tetap menjaga efesiensi." />
            <TableLayout
                android:paddingLeft="16dp"
                android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:text="Belanja Pemerintah Pusat"
                        android:paddingRight="32dp"

                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"/>
                    <TextView
                        android:text="1.634,3"
                        android:paddingRight="24dp"
                        android:textStyle="bold"
                        android:textColor="@color/orangeFlaminggo"
                        android:textSize="18sp"/>
                    <TextView
                        android:gravity="right"
                        android:text="1.449,3"
                        android:textColor="@color/yellow"
                        android:textSize="14sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Transfer ke Daerah"
                        android:paddingRight="32dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"/>
                    <TextView
                        android:gravity="right"
                        android:text="524,2"
                        android:paddingRight="24dp"
                        android:textStyle="bold"
                        android:textColor="@color/orangeFlaminggo"
                        android:textSize="18sp"/>
                    <TextView
                        android:gravity="right"
                        android:text="497,4"
                        android:textColor="@color/yellow"
                        android:textSize="14sp"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>


    </LinearLayout>
    <TextView
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:padding="8dp"
        android:text="Defisit Anggaran sebesar 1,84% terhadap PDB ditempuh untuk mendukung program prioritas pemerintah dalam melaksanakan pembangunan nasional sebagai stimulus untuk mendorong pertumbuhan eklonomi dengan tetap menjaga keseimbangan fiskal."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembiayaan Anggaran"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary" />
        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:paddingBottom="4dp"
                android:text="Pembiayaan Utang dikelola secara hati-hati (prudent) dan produktif sehingga dapat berkontribusi optimal bagi perekonomian dan kesejahteraan masyarakat." />
            <TableLayout
                android:paddingLeft="32dp"
                android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:text="Pembiayaan Utang"
                        android:paddingRight="32dp"

                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"/>
                    <TextView
                        android:text="296,0"
                        android:paddingRight="24dp"
                        android:textStyle="bold"
                        android:textColor="@color/orangeFlaminggo"
                        android:textSize="18sp"/>
                    <TextView
                        android:gravity="right"
                        android:text="387,4"
                        android:textColor="@color/yellow"
                        android:textSize="14sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Pembiayaan Investasi"
                        android:paddingRight="32dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"/>
                    <TextView
                        android:gravity="right"
                        android:text="75,9"
                        android:paddingRight="24dp"
                        android:textStyle="bold"
                        android:textColor="@color/orangeFlaminggo"
                        android:textSize="18sp"/>
                    <TextView
                        android:gravity="right"
                        android:text="65,7"
                        android:textColor="@color/yellow"
                        android:textSize="14sp"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
